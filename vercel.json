{
  "redirects": [
    {
      "source": "/((?!api|health).*)",
      "has": [{ "type": "host", "value": "verifiable-claude.vercel.app" }],
      "destination": "https://verifiable-claude.yermakova.com/$1",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/index.js" },
    { "source": "/health", "destination": "/api/index.js" }
  ]
}
